{
  "version": "1.0",
  "description": "EKS EC2 Node Benchmark Metrics Definition",
  "metrics": {
    "system": {
      "passmark_single_thread": {
        "description": "Passmark CPU Single Thread Score (runs-on.com 비교용)",
        "unit": "score",
        "higher_is_better": true
      },
      "passmark_multi_thread": {
        "description": "Passmark CPU Multi Thread Score",
        "unit": "score",
        "higher_is_better": true
      },
      "cpu_events_per_sec": {
        "description": "CPU 연산 처리량 (소수 계산)",
        "unit": "events/sec",
        "higher_is_better": true
      },
      "cpu_latency_avg_ms": {
        "description": "CPU 연산 평균 지연시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "cpu_latency_p95_ms": {
        "description": "CPU 연산 95th percentile 지연시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "memory_read_mib_sec": {
        "description": "메모리 읽기 처리량",
        "unit": "MiB/sec",
        "higher_is_better": true
      },
      "memory_write_mib_sec": {
        "description": "메모리 쓰기 처리량",
        "unit": "MiB/sec",
        "higher_is_better": true
      }
    },
    "redis": {
      "set_ops_per_sec": {
        "description": "SET 명령 처리량",
        "unit": "ops/sec",
        "higher_is_better": true
      },
      "get_ops_per_sec": {
        "description": "GET 명령 처리량",
        "unit": "ops/sec",
        "higher_is_better": true
      },
      "set_latency_p99_ms": {
        "description": "SET 명령 99th percentile 지연시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "get_latency_p99_ms": {
        "description": "GET 명령 99th percentile 지연시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "pipeline_ops_per_sec": {
        "description": "Pipeline 모드 처리량",
        "unit": "ops/sec",
        "higher_is_better": true
      }
    },
    "nginx": {
      "requests_per_sec": {
        "description": "HTTP 요청 처리량",
        "unit": "req/sec",
        "higher_is_better": true
      },
      "latency_avg_ms": {
        "description": "HTTP 평균 지연시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "latency_p99_ms": {
        "description": "HTTP 99th percentile 지연시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "transfer_mb_sec": {
        "description": "데이터 전송량",
        "unit": "MB/sec",
        "higher_is_better": true
      }
    },
    "springboot": {
      "startup_time_ms": {
        "description": "JVM/App 시작 시간",
        "unit": "ms",
        "higher_is_better": false
      },
      "requests_per_sec": {
        "description": "HTTP 요청 처리량 (warmed up)",
        "unit": "req/sec",
        "higher_is_better": true
      },
      "latency_p99_ms": {
        "description": "HTTP 99th percentile 지연시간",
        "unit": "ms",
        "higher_is_better": false
      }
    },
    "node": {
      "provision_time_sec": {
        "description": "노드 프로비저닝 시간 (Karpenter)",
        "unit": "sec",
        "higher_is_better": false
      },
      "pod_count_total": {
        "description": "노드의 전체 Pod 수",
        "unit": "count",
        "higher_is_better": false
      },
      "pod_count_daemonset": {
        "description": "DaemonSet Pod 수",
        "unit": "count",
        "higher_is_better": false
      }
    }
  }
}
